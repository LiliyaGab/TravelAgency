@model IEnumerable<TravelAgency.Domain.Entities.Tour>

@{
    ViewBag.Title = "Админ панель: список туров";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список туров</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th class="text-right">Город</th>
                <th class="text-right">Дата начала</th>
                <th class="text-right">Дата конца</th>
                <th class="text-right">Тип</th>
                <th class="text-right">Тип питания</th>
                <th class="text-right">Отель</th>
                <th class="text-right">Описание</th>
                <th class="text-center">Действия</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">
                        @Html.ActionLink(item.Id.ToString(), "Edit", new { id = item.Id })
                        @*@Html.DisplayFor(modelItem => item.Id)*@
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Hotel.City.Name)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.TourType.Type)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.FoodType1.FoodType1)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Hotel.Name)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="text-center">
                        @using (@Html.BeginForm("Delete","Tour"))
                        {
                            @Html.Hidden("ID", item.Id)
                            <input type="submit" class="btn btn-default btn-xs" value="Удалить"/>
                        }
                        @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                    </td>
                </tr>
            }
        </table> 
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Добавить тур", "Create", null, new { @class = "btn btn-default"})
    </div>
    <div class="panel-footer">
        @using (@Html.BeginForm("Index", "Admin"))
        {
            <input type="submit" class="btn btn-default btn-xs" value="Вернуться в личный кабинет" />
        }
    </div>
</div>

